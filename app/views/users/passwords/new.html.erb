<section class="jumbotron">
  <div class="container">
    <div class="col-md-4"></div>
    <div class="col-md-4 login_container">
      <h2 class="text-center">Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), :html=>{:class=>"form-horizontal", method: :post}) do |f| %>
      <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.label :email, :class=>"control-label sr-only" %>
          <div class="col-md-12">
            <%= f.email_field :email, autofocus: true, :class=>"form-control", :placeholder=>"Email" %>      
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-12">
            <%= f.submit "Send me reset password instructions", :class=>"btn btn-primary btn-block" %>       
          </div>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
    <div class="col-md-4"></div>
  </div>  
</section>